<div class='show'>
  <div class='title-area'>
    <div class='title'>My Bookshelf</div>
  </div>
  <div class='bookshelf-area'>
    <div class='bookshelf' id='bookshelf'>
      <%= render 'my_bookshelf/bookshelf', books: @books %>  
    </div>
  </div>
  <div class='operate-bookshelf-area' id='operate-bookshelf-area'>
    <%= render 'my_bookshelf/operate-bookshelf', {next_flag: @next_flag, previous_flag: @previous_flag} %>
  </div>    
</div>

