<div id='previous-result'>
  <% if @previous_flag == true then %>
    <%= link_to '<', {action: 'previous_result'}, {remote: true, method: :get, class: 'previous-result-click'} %>
  <% else %>
    <div class='disable-operate'><</div>
  <% end %>
</div>
<span id='result-index'>
  <%= session[:search_offset]/12 + 1 %>
  /
  <%= session[:search_count]/12 + 1 - ((session[:search_count]%12 == 0 && session[:search_count] != 0) ? 1 : 0) %>
</span>
<div id='next-result'>
  <% if @next_flag == true then %>
    <%= link_to '>', {action: 'next_result'}, {remote: true, method: :get, class: 'next-result-click'} %>
  <% else %>
    <div class='disable-operate'>></div>
  <% end %>
</div>
