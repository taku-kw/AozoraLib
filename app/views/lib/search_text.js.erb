<% when 'text_title' then %>
  $('#result-area').html("<%= j(render 'lib/result-name-title', search_result: @search_result) %>")
<% when 'text_author' then %>
  $('#result-area').html("<%= j(render 'lib/result-name-author', search_result: @search_result) %>")
<% end %>

$('#operate-result-area').html("<%= j(render 'lib/operate-result') %>")
