<div class='book-card-list'>
  <% for result in search_result do %>
    <a href=<%= result.link %> target="_blank" rel="noopener noreferrer" class='book-card'>
      <div class='book'>
        <div class='book-title'>
          <%= result.title %>
        </div>
        <div class='book-author'>
          <%= result.author %>
        </div>
        <% if user_signed_in? then %>
          <%= button_to 'my_bookshelf/new', method: 'get', class: 'add-bookshelf', remote: true, params: {book_id: result.id} do %>
            <%= image_tag '/assets/lib/lib/plus.svg', class: 'add-bookshelf-icon' %>
          <% end %>
        <% end %>
      </div> 
    </a>
  <% end %>
</div>


